<%- include('partials/header.ejs') %>


<div class="container mx-auto p-5">
    <h1 class="text-3xl font-bold mb-5">Blog Posts</h1>

    <% if (posts && posts.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
        <% posts.forEach(post => { %>
          <div class="bg-white rounded shadow p-5">
            <h2 class="text-xl font-semibold mb-3"><%= post.title %></h2>
            <p class="text-gray-600"><%= post.content.substring(0, 100) %>...</p>
            <p class="text-sm text-gray-500 mt-3">Category: <%= post.category %></p>
            <div class="mt-3">
              <% if (post.tags && post.tags.length > 0) { %>
                <p class="text-sm text-gray-500">Tags: 
                  <% post.tags.forEach(tag => { %>
                    <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded mr-1"><%= tag %></span>
                  <% }); %>
                </p>
              <% } %>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p>No blog posts available.</p>
    <% } %>
  </div>


<%- include('partials/footer.ejs') %>